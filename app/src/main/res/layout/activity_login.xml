<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvLoginTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/kakaoLoginButton1"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:text="카카오에서 제공하는 로그인 버튼\n(com.kakao.usermgmt.LoginButton)"/>

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/kakaoLoginButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"/>

    <TextView
        android:id="@+id/tvLoginTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/kakaoLoginButton1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/kakaoLoginButton1"
        android:text="커스텀 카카오 로그인 버튼\n(Button, 200dp*43dp)"/>

    <Button
        android:id="@+id/kakaoLoginButton2"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:visibility="gone"
        android:background="@drawable/kakaologin"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/kakaoLoginButton1"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginTitle2"/>

</LinearLayout>
